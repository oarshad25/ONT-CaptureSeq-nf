root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_size = 4
indent_style = space

[*.{md,y{a,}ml,html,css,scss,js}]
indent_size = 2

[*.{py,smk,r,R}]
max_line_length = 100

[*.{md,Rmd,rst}]
trim_trailing_whitespace = false
indent_size = 2

# These files are edited and tested upstream in nf-core/modules
[/modules/nf-core/**]
charset = unset
end_of_line = unset
insert_final_newline = unset
trim_trailing_whitespace = unset
indent_style = unset
indent_size = unset
