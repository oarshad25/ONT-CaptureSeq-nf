// test profile for providing pipeline parameters to run on a test dataset

// usage: nextflow run main.nf -profile <laptop,bmrc,local>,test_wf_transcriptomes

params {
    // Input data
    samplesheet = "test/wf-transcriptomes/samplesheet.csv"

    // genome references
    genome = "data/test/wf-transcriptomes-demo/hg38_chr20.fa"
    annotation = "data/test/wf-transcriptomes-demo/gencode.v22.annotation.chr20.gtf"

    outdir = "results/wf-transcriptomes"

    /*
    Over ride default tool options
    =================
    */
    run_restrander = true
}
